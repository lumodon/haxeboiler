{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Firefox against localhost",
			"request": "launch",
			"type": "firefox",
			"url": "file://${workspaceFolder}/public/index.html",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": {
				"type" : "haxe",
				"args" : "active configuration"
			}
		},
        {
            "name": "HashLink",
            "request": "launch",
            "type": "hl",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": {
                "type": "haxe",
                "args": "active configuration"
            }
        }
	]
}